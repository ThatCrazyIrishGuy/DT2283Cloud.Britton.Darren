<!-- Jquery -->
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

<!-- Photo Uploader JS -->
<script src="js/fileinput.js" type="text/javascript"></script>

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>


<html>
	<head>
		<title>Upload Test</title>
	</head>
	<body>
    <div class="container">
      <h2>Photo Upload Form</h2>
      <form role="form" action="<%= blobstoreService.createUploadUrl("/upload") %>" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <div class="form-group">
          <input id="input-24" type="file" multiple="false" data-show-upload="false" name="myFile">
        </div>
      </form>
    </div>
	</body>
</html>

<script>
$("#input-24").fileinput({
  maxFileSize: 32000,
  allowedFileExtensions: ['jpg', 'gif', 'png'],
});
</script>

<script>
$('#input-24').on('fileloaded', function(event, file, previewId) {
  $('#input-24').data-show-upload ="true";
});
</script>
